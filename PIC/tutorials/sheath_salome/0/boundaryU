FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      boundaryU;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 1 -1 0 0 0 0 ];

internalField   uniform ( 0 0 0 );

boundaryField
{
    plasma
    {
        type            fixedValue;
        value           uniform ( 0 0 -30949 );
    }
    wall
    {
        type            fixedValue;
        value           uniform ( 0 0 0 );
    }
    side_x0
    {
        type            cyclic;
    }
    side_x1
    {
        type            cyclic;
    }
    side_y0
    {
        type            cyclic;
    }
    side_y1
    {
        type            cyclic;
    }
}


