{
    xPeriodic_half0
    {
        type            fixedValue;
        value           uniform 60;
    }
    xPeriodic_half1
    {
        type            fixedValue;
        value           uniform 0;
    }
    yPeriodic_half0
    {
        type            cyclic;
    }
    yPeriodic_half1
    {
        type            cyclic;
    }
    zPeriodic_half0
    {
        type            cyclic;
    }
    zPeriodic_half1
    {
        type            cyclic;
    }
}

